<?xml version="1.0"?>
<config>
    <modules>
        <SPM_ShopyMind>
            <version>1.2.11</version>
        </SPM_ShopyMind>
    </modules>

    <global>
        <blocks>
            <spm_shopymind>
                <class>SPM_ShopyMind_Block</class>
            </spm_shopymind>
        </blocks>
        <helpers>
            <shopymind>
                <class>SPM_ShopyMind_Helper</class>
            </shopymind>
        </helpers>
        <models>
            <shopymind>
                <class>SPM_ShopyMind_Model</class>
            </shopymind>
        </models>
        <events>
            <sales_order_save_commit_after>
                <observers>
                    <SPM_ShopyMind_Model_Observer>
                        <type>singleton</type>
                        <class>shopymind/observer</class>
                        <method>orderUpdateObserver</method>
                    </SPM_ShopyMind_Model_Observer>
                </observers>
            </sales_order_save_commit_after>
            <admin_system_config_changed_section_shopymind_configuration>
                <observers>
                    <spm_shopymind_model_observer>
                        <type>singleton</type>
                        <class>shopymind/observer</class>
                        <method>adminSystemConfigChangedSectionShopymindConfiguration</method>
                    </spm_shopymind_model_observer>
                </observers>
            </admin_system_config_changed_section_shopymind_configuration>
            <phpunit_test_start_after>
                <observers>
                    <SPM_ShopyMind_Model_Observer>
                        <class>SPM_ShopyMind_Test_Observer</class>
                        <method>beforeTestStart</method>
                    </SPM_ShopyMind_Model_Observer>
                </observers>
            </phpunit_test_start_after>
            <catalog_product_save_commit_after>
                <observers>
                    <SPM_ShopyMind_Model_Observer>
                        <type>singleton</type>
                        <class>shopymind/observer</class>
                        <method>saveProduct</method>
                    </SPM_ShopyMind_Model_Observer>
                </observers>
            </catalog_product_save_commit_after>
            <catalog_product_delete_after_done>
                <observers>
                    <SPM_ShopyMind_Model_Observer>
                        <type>singleton</type>
                        <class>shopymind/observer</class>
                        <method>deleteProduct</method>
                    </SPM_ShopyMind_Model_Observer>
                </observers>
            </catalog_product_delete_after_done>
            <catalog_category_save_commit_after>
                <observers>
                    <SPM_ShopyMind_Model_Observer>
                        <type>singleton</type>
                        <class>shopymind/observer</class>
                        <method>saveProductCategory</method>
                    </SPM_ShopyMind_Model_Observer>
                </observers>
            </catalog_category_save_commit_after>
            <catalog_category_delete_after>
                <observers>
                    <SPM_ShopyMind_Model_Observer>
                        <type>singleton</type>
                        <class>shopymind/observer</class>
                        <method>deleteProductCategory</method>
                    </SPM_ShopyMind_Model_Observer>
                </observers>
            </catalog_category_delete_after>
            <customer_save_commit_after>
                <observers>
                    <SPM_ShopyMind_Model_Observer>
                        <type>singleton</type>
                        <class>shopymind/observer</class>
                        <method>saveCustomer</method>
                    </SPM_ShopyMind_Model_Observer>
                </observers>
            </customer_save_commit_after>
            <customer_address_save_commit_after>
                <observers>
                    <SPM_ShopyMind_Model_Observer>
                        <type>singleton</type>
                        <class>shopymind/observer</class>
                        <method>saveCustomerAddress</method>
                    </SPM_ShopyMind_Model_Observer>
                </observers>
            </customer_address_save_commit_after>
            <customer_address_delete_after>
                <observers>
                    <SPM_ShopyMind_Model_Observer>
                        <type>singleton</type>
                        <class>shopymind/observer</class>
                        <method>saveCustomerAddress</method>
                    </SPM_ShopyMind_Model_Observer>
                </observers>
            </customer_address_delete_after>
            <customer_delete_after>
                <observers>
                    <SPM_ShopyMind_Model_Observer>
                        <type>singleton</type>
                        <class>shopymind/observer</class>
                        <method>deleteCustomer</method>
                    </SPM_ShopyMind_Model_Observer>
                </observers>
            </customer_delete_after>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <shopymind_configuration>
                    <files>
                        <shopymind>SPM_ShopyMind.csv</shopymind>
                    </files>
                </shopymind_configuration>
            </modules>
        </translate>
    </adminhtml>

    <frontend>
        <routers>
            <shopymind>
                <use>standard</use>
                <args>
                    <module>SPM_ShopyMind</module>
                    <frontName>shopymind</frontName>
                </args>
            </shopymind>
        </routers>

        <layout>
            <updates>
                <spm_shopymind module="SPM_ShopyMind">
                    <file>shopymind.xml</file>
                </spm_shopymind>
            </updates>
        </layout>
    </frontend>
</config>
