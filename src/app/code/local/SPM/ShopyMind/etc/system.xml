                            <frontend_type>text</frontend_type>
                            <config_path>shopymind/configuration/apiidentification</config_path>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </api_key>
                        <api_password translate="label">
                            <label>API Password</label>
                            <frontend_type>password</frontend_type>
                            <config_path>shopymind/configuration/apipassword</config_path>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <can_be_empty>1</can_be_empty>
                        </api_password>
                        <birth_required>
                            <label>Date of birth is required ?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <config_path>shopymind/configuration/birthrequired</config_path>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
