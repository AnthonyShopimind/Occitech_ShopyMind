            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <shopymind_configuration translate="label comment">
                    <label>ShopyMind Configuration</label>
                    <comment>
                        <![CDATA[
                            <div style="text-align:center;"><a href="http://www.shopymind.com/" target="_blank"><img src="http://media.shopymind.com/img/logo.png" /></a></div>
